{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/components/**/*",
    "src/index.ts",
    "src/vite-env.d.ts",
    "src/types/*.d.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "src/App.tsx", "src/main.tsx"]
}
